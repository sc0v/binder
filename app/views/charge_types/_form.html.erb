<%= simple_form_for @charge_type, html: { class: 'form-horizontal' } do |f| %>
  <%= hidden_field(nil, :from_charge, value: params[:from_charge]) %>
  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  <%= f.input :default_amount do %>
    <div class="input-group" style="display: flex">
      <%= content_tag :span, '$', class: 'input-group-addon' %>
      <%= f.input_field :default_amount, as: :string, value: number_to_currency(f.object.default_amount, unit: '', delimiter: '') %>
    </div>
  <% end %>
  <%= f.input :description, as: :text, textarea: '{ font-size:16px; }' %>
  <%= f.input :requires_booth_chair_approval, as: :boolean %>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to t('.cancel', default: t('helpers.links.cancel')),
                charge_types_path, class: 'btn btn-default' %>
  </div>
<% end %>
