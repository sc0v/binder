<h1>Event Type</h1>
<hr/>
<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @event_type.name %></dd>
  <dt><strong>Display in Sidebar?</strong></dt>
  <dd><%= @event_type.display ? 'Yes':'No' %></dd>
  <dt><Strong>Active: </Strong></dt>
  <dd><%= @event_type.active.to_s.capitalize %></dd>
</dl>


<%= link_to t('.back', :default => t("helpers.links.back")),
          events_path, :class => 'btn btn-default' %>

<% if can?(:update, @event_type) %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_event_type_path(@event_type), :class => 'btn btn-primary' %>
<% end %>

<% if can?(:destroy, @event_type) %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
          event_type_path(@event_type),
          :method => 'delete',
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-danger' %>
<% end %>

