<h1>Event</h1>
<hr/>
<dl class="dl-horizontal">
  <dt><strong>Type:</strong></dt>
  <dd><%= @event.event_type.name %></dd>
  <dt><strong>Created At:</strong></dt>
  <dd><%= date_and_time @event.created_at %></dd>
  <dt><strong>Is Done:</strong></dt>
  <dd><%= format_boolean @event.is_done %></dd>
  <dt><strong>Assigned To:</strong></dt>
  <dd><%= @event.participant.name if @event.participant != nil %></dd>
  <dt><strong>Description:</strong></dt>
  <dd><%= @event.description %></dd>
  <dt><Strong>Active: </Strong></dt>
  <dd><%= @event.active.to_s.capitalize %></dd>
</dl>


<%= link_to t('.back', :default => t("helpers.links.back")),
          events_path, :class => 'btn btn-default' %>

<% if can?(:update, @event) %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_event_path(@event), :class => 'btn btn-primary' %>
<% end %>
<% if can?(:destroy, @event) %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
          event_path(@event),
          :method => 'delete',
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-danger' %>
<% end %>