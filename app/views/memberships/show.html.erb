<% if can?(:read, @membership) %>
  <%- model_class = Membership -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human %></h1>
  </div>
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:organization) %>:</strong></dt>
    <dd><%= @membership.organization.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:participant) %>:</strong></dt>
    <dd><%= @membership.participant.andrewid %></dd>
    <dt><strong><%= model_class.human_attribute_name(:is_booth_chair) %>:</strong></dt>
    <dd><%= format_boolean(@membership.is_booth_chair?)  %></dd>
    <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
    <dd><%= @membership.title %></dd>
    <dt><strong><%= model_class.human_attribute_name(:booth_chair_order) %>:</strong></dt>
    <dd><%= @membership.booth_chair_order %></dd>
    <dt><Strong>Active: </Strong></dt>
    <dd><%= @membership.active.to_s.capitalize %></dd>
  </dl>
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
              memberships_path, :class => 'btn' %>
    <% if can?(:update, @membership) %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_membership_path(@membership), :class => 'btn' %>
    <% end %>
    <% if can?(:destroy, @membership) %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              membership_path(@membership),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
    <% end %>
  </div>
<% else %>
  <h3>Not Authorized!</h3>
<% end %>